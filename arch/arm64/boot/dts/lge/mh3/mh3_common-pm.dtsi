		compatible = "lge,prm";
		lge,vfps-enabled;
		lge,sben-enabled;
		lge,fbcn-enabled;
	};
};

&pm6150_adc_tm {
	xo_therm {
		reg = <ADC_XO_THERM_PU2>;
		qcom,ratiometric;
		qcom,hw-settle-time = <200>;
	};
};

&pm6150_vadc {
	usb_id_2 {
		reg = <ADC_AMUX_THM2>;
		label = "usb_id_2";
		qcom,pre-scaling = <1 1>;
	};

        pmic_hardware_id {
                reg = <ADC_AMUX_THM4>;
                label = "pmic_hardware_id";
                qcom,ratiometric;
                qcom,hw-settle-time = <100>;
                qcom,pre-scaling = <1 1>;
        };
};

&pm6150l_vadc {
	rf_pa0_therm {
		reg = <ADC_AMUX_THM2_PU2>;
		label = "rf_pa0_therm";
		qcom,ratiometric;
		qcom,hw-settle-time = <200>;
		qcom,pre-scaling = <1 1>;
	};

	quiet_therm {
		reg = <ADC_GPIO4_PU2>;
		label = "quiet_therm";
		qcom,ratiometric;
		qcom,hw-settle-time = <200>;
		qcom,pre-scaling = <1 1>;
	};

        usb_id {
                reg = <ADC_AMUX_THM3>;
                label = "usb_id";
                qcom,pre-scaling = <1 1>;
        };

};

&pm6150l_adc_tm {
