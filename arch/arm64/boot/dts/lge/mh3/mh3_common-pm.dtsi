	lge_batterydata: qcom,battery-data {
		qcom,batt-id-range-pct = <20>;
		#include "../battery_profile/LGE_BLT45_Lishen_4000mAh.dtsi"
		#include "../battery_profile/LGE_BLT45_Tocad_4000mAh.dtsi"
	};

	lge-battery-supplement {
	   capacity-mah-min = <3900>;
	   capacity-raw-full = <100>;
	   max-voltage-uv = <4400>;

	   default-battery-name = "LGE_BLT45_Lishen_4000mAh";
	   default-battery-kohm = <200>;

	/* format : (temp index) (temp delta) */
	   tempcomp-offset = <
	        (-300)    0
	        (-200)    0
	        (-190)    0
	        (-180)    0
	        (-170)    0
	        (-160)    0
	        (-150)    0
	        (-100)    0
	        ( -50)    0
	        0         0
	        50        0
	        100       0
	        150       0
	        200       0
	        250     0
	        300     0
	        350     0
	        400     0
	        450     0
	        500     0
	        550     0
	        600     0
	        700     0
	        800     0
	        900     0
	        >;
	   tempcomp-icoeff = <0>;

	/* overriding by battery type */
	/*
		LGE_BLT45_Lishen_4000mAh {
	        tempcomp-icoeff = <0>;
	        };
		LGE_BLT45_Tocad_4000mAh {
	        tempcomp-icoeff = <0>;
	        };
	*/
	};
    };
};


&soc {
